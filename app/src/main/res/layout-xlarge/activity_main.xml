<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/abc_action_bar_icon_vertical_padding"
    android:showDividers="middle"
    android:baselineAligned="false"
    android:background="#ffffff"
    android:gravity="center|top"
    android:weightSum="1"
    android:id="@+id/llTelaModoJogo">

    <ImageView
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/ic_logo"
        android:layout_marginBottom="40dp"
        android:layout_weight="0.07" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jogar"
        android:id="@+id/btJogar"
        android:background="#ff33b5e5"
        android:clickable="true"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:textStyle="bold"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/treinar"
        android:id="@+id/btTreinar"
        android:background="#2ae64c"
        android:clickable="true"
        android:textStyle="bold"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total de acertos:"
        android:id="@+id/textView"
        android:layout_gravity="left"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/tvTotalAcertos"
        android:layout_gravity="center_horizontal|left"
        android:textColor="#ff33b5e5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pontuação:"
        android:id="@+id/textView2"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/tvPontuacao"
        android:layout_gravity="left"
        android:textColor="#ff33b5e5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tempo dedicado no treino:"
        android:id="@+id/textView3"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/tvTempoTotalTreino"
        android:layout_gravity="left"
        android:textColor="#2ae64c" />

</LinearLayout>